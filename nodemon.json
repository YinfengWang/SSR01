{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    ".editorconfig",
    ".gitignore",
    "package.json",
    ".eslintrc"
  ],
  "verbose": true,
  "execMap": {
    "": "node",
    "js": "node --harmony"  
  },
  "watch": [
    "server/",
    "nodemon.json"  
  ],
  "env": {
    "NODE_ENV": "development"
  }, 
  "ext": "js json",
  "legacy-watch": false
}